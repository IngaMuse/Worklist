<mvc:View
	controllerName="zjblessons.Worklist.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">

<Page
		showFooter="false"
>
		<customHeader>
			<Bar>
					<contentLeft>
					<Button type="Transparent" icon="{i18n>iNavBackIcon}" press ='onNavBack'/>
							<Title
								text="{= ${objectView>/bEditMode} ? 'EditMode': ${DocumentNumber}}"
							/>
					</contentLeft>
					<contentRight>
						<Button type="Emphasized" press='onPressEdit' text="{i18n>sEdit}" icon="{i18n>iEditIcon}" visible="{= !${objectView>/bEditMode}}"/>
						<Button type="Emphasized" press='onPressSave' text="{i18n>sSave}" icon="{i18n>iSaveIcon}" visible="{= ${objectView>/bEditMode}}"/>
						<Button type="Transparent" press='onPressCancel' text="{i18n>sCancel}" icon="{i18n>iResetIcon}" visible="{= ${objectView>/bEditMode}}"/>
						<Button type="Reject" press='onPressDelete' icon="{i18n>iDeleteIcon}" visible="{= !${objectView>/bEditMode}}"/>
					</contentRight>
			</Bar>
		</customHeader>
		<content>
			<IconTabBar expandable="false" headerMode="Inline" selectedKey="{= ${objectView>/sSelectedTab}}">
					<items>
					<IconTabFilter icon="{i18n>iListIcon}" key="List" text="{i18n>sList}">
					<VBox>
							<List>
									<CustomListItem>
									<VBox class="supUiContentPadding">
												<Label text="{i18n>DocumentNumberLabel}" labelFor="DocumentNumberID"/>
												<Input id ='DocumentNumberID' editable="{= ${objectView>/bEditMode}}" value="{DocumentNumber}"/>
									</VBox>
								  </CustomListItem>								
									<CustomListItem>
									<VBox class="supUiContentPadding">
												<Label text="{i18n>RegionTextLabel}" labelFor="RegionID"/>
												<Select
												selectedKey="{RegionText}"
												editable="{= ${objectView>/bEditMode}}" 
												items="{
													path: '/zjblessons_base_Regions'
													}"
												>
														<items>
																<core:Item  key='{RegionID}' text="{RegionText}"/>
														</items>
												</Select>
									</VBox>
								</CustomListItem>
									<CustomListItem>
									<VBox>
												<Label text="{i18n>DescriptionLabel}" labelFor="DescriptionID"/>
												<TextArea id ='DescriptionID' rows='3' editable="{= ${objectView>/bEditMode}}" value="{Description}"/>
									</VBox>
								</CustomListItem>
							</List>
					</VBox>
					</IconTabFilter>
					<IconTabFilter icon="{i18n>iFormIcon}" key="Form" text="{i18n>sForm}">
		
					</IconTabFilter>
					</items>
			</IconTabBar>
		</content>
</Page>
</mvc:View>