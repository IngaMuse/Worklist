<mvc:View controllerName="zjblessons.Worklist.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page 
	>

	<customHeader>
		<Toolbar>
				<content>
						<IconTabHeader selectedKey="{= ${worklistView>/sITBKey}}" select="onIconTabHeaderSelect">
								<items>
										<IconTabFilter id = '12345' key="All" text = '{i18n>sAll}'/>
										<IconTabFilter key="Deactivated" text = '{i18n>sDeactivated}'/>
								</items>
						</IconTabHeader>
				</content>
		</Toolbar>
	</customHeader>
		<Table 
				id='table' 
				width="auto" 
				itemPress = 'onItemSelect'
				growing="true"
				growingThreshold = "15" 
				growingScrollToLoad="true" >
			<headerToolbar>
				<Toolbar>
					<Title id='tableHeader' text="({= ${worklistView>/sCount}})"/>
					<SearchField 
					id = 'searchField'
					tooltip="{i18n>worklistSearchTooltip}" 
					showSearchButton = 'false'
					change='onSearch' liveChange='onLiveSearch' width="auto">
					</SearchField>
					<SearchField 
					id = 'searchFieldPlantText'
					tooltip="{i18n>worklistSearchTooltipPlantText}" 
					placeholder="{i18n>worklistSearchPlaceholder}" 
					showSearchButton = 'false'
					change='onSearch' liveChange='onLiveSearch' width="auto">
					</SearchField>

					<DateRangeSelection 
					id = 'searchFieldDocumentDate'
					tooltip="{i18n>worklistSearchTooltipDocumentDate}" 
					change='onSearchDate' width="15em"
					placeholder="{i18n>worklistSearchPlaceholderDocumentDate}">
					</DateRangeSelection>

					<ToolbarSpacer />
					<Button
							icon="{i18n>iAdd}" 
							type="Emphasized"
							press='onPressCreate'
					/>
					<Button
							icon="{i18n>iRefresh}"
							type="Transparent"
							press='onPressRefresh'
					/>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="{i18n>tableNameColumnTitle}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitleDocumentDate}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitlePlantText}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitleRegionText}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitleDescription}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnTitleCreated}"/>
				</Column>
					<Column width="5%">
					<Text text=""/>
				</Column>
					<Column width="5%">
					<Text text=""/>
				</Column>
			</columns>
		</Table>
	</Page>
</mvc:View>